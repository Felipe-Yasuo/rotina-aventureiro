generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  name         String
  email        String       @unique
  password     String
  xp           Int          @default(0)
  money        Int          @default(0)
  level        Int          @default(1)
  routines     Routine[]
  followers    Friendship[] @relation("following")
  following    Friendship[] @relation("follower")
  activities   Activity[]
  streak       Int          @default(0)
  lastStreakAt DateTime?
  lives        Int          @default(5)

  strength     Int @default(0)
  intelligence Int @default(0)
  charisma     Int @default(0)
  creativity   Int @default(0)
  health       Int @default(0)

  createdAt DateTime   @default(now())
  userItems UserItem[]
}

model Routine {
  id          String             @id @default(uuid())
  title       String
  description String?
  difficulty  Difficulty
  imageUrl    String
  xpReward    Int
  moneyReward Int
  completed   Boolean            @default(false)
  user        User               @relation(fields: [userId], references: [id])
  userId      String
  attributes  RoutineAttribute[]
  createdAt   DateTime           @default(now())
}

model RoutineAttribute {
  id        String        @id @default(uuid())
  routine   Routine       @relation(fields: [routineId], references: [id])
  routineId String
  type      AttributeType
}

enum AttributeType {
  STRENGTH
  INTELLIGENCE
  CHARISMA
  CREATIVITY
  HEALTH
}

model Friendship {
  id          String   @id @default(uuid())
  follower    User     @relation("follower", fields: [followerId], references: [id])
  followerId  String
  following   User     @relation("following", fields: [followingId], references: [id])
  followingId String
  createdAt   DateTime @default(now())
}

model Activity {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  routineId   String?
  action      String
  description String
  createdAt   DateTime @default(now())
}

model Item {
  id          String     @id @default(uuid())
  name        String
  description String?
  price       Int
  imageUrl    String?
  createdAt   DateTime   @default(now())
  userItems   UserItem[]
}

model UserItem {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    String
  createdAt DateTime @default(now())
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
